<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:numberpicker="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        app:cardElevation="4dp"
        android:layout_gravity="bottom"
        android:id="@+id/lanjutkan"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="Lanjutkan"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>

    <android.support.v4.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_marginBottom="65dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:textColor="#FFF"
                    android:padding="18dp"
                    android:textStyle="italic"
                    android:textSize="@dimen/activity_vertical_margin"
                    android:textAlignment="center"
                    android:text="Maksimal pemesanan yang dapat dilakukan hanya 3 buah tabung bright gas."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_centerVertical="true"
                                android:background="@drawable/icon_pesanan_gas"
                                android:layout_width="45dp"
                                android:layout_height="65dp" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="90dp">

                            <LinearLayout
                                android:layout_centerVertical="true"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_width="match_parent"
                                    android:textAlignment="textStart"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    android:textColor="#808080"
                                    android:text="Beli Gas 5.5 Kg"
                                    android:layout_height="wrap_content"
                                    android:gravity="start" />
                                <TextView
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_width="match_parent"
                                    android:textAlignment="textStart"
                                    android:textSize="14dp"
                                    android:textColor="#808080"
                                    android:text="Pesan bright gas baru 5.5kg"
                                    android:layout_height="wrap_content"
                                    android:gravity="start" />
                                <com.travijuu.numberpicker.library.NumberPicker
                                    android:layout_marginTop="4dp"
                                    android:id="@+id/np_baru_5kg"
                                    android:layout_width="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_height="40dp"
                                    numberpicker:focusable="false"
                                    numberpicker:max="3"
                                    numberpicker:min="0"
                                    numberpicker:unit="0"
                                    numberpicker:value="-5" />

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/icon_pesanan_gas"
                        android:layout_width="45dp"
                        android:layout_height="65dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:textAlignment="textStart"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="#808080"
                            android:text="Beli Gas 12 Kg"
                            android:layout_height="wrap_content"
                            android:gravity="start" />
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:textAlignment="textStart"
                            android:textSize="14dp"
                            android:textColor="#808080"
                            android:text="Pesan bright gas baru 12kg"
                            android:layout_height="wrap_content"
                            android:gravity="start" />
                        <com.travijuu.numberpicker.library.NumberPicker
                            android:layout_marginTop="4dp"
                            android:id="@+id/np_baru_12kg"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_height="40dp"
                            numberpicker:focusable="false"
                            numberpicker:max="3"
                            numberpicker:min="0"
                            numberpicker:unit="0"
                            numberpicker:value="-5" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_pesanan_gas"
                            android:layout_width="45dp"
                            android:layout_height="65dp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="90dp">

                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_width="match_parent"
                                android:textAlignment="textStart"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textColor="#808080"
                                android:text="Isi Ulang Gas 5.5 Kg"
                                android:layout_height="wrap_content"
                                android:gravity="start" />
                            <TextView
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_width="match_parent"
                                android:textAlignment="textStart"
                                android:textSize="14dp"
                                android:textColor="#808080"
                                android:text="Isi ulang bright gas baru 5.5kg"
                                android:layout_height="wrap_content"
                                android:gravity="start" />
                            <com.travijuu.numberpicker.library.NumberPicker
                                android:layout_marginTop="4dp"
                                android:id="@+id/np_isi_5kg"
                                android:layout_width="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_height="40dp"
                                numberpicker:focusable="false"
                                numberpicker:max="3"
                                numberpicker:min="0"
                                numberpicker:unit="0"
                                numberpicker:value="-5" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_pesanan_gas"
                            android:layout_width="45dp"
                            android:layout_height="65dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="90dp">

                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_width="match_parent"
                                android:textAlignment="textStart"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textColor="#808080"
                                android:text="Isi Ulang Gas 12 Kg"
                                android:layout_height="wrap_content"
                                android:gravity="start" />
                            <TextView
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_width="match_parent"
                                android:textAlignment="textStart"
                                android:textSize="14dp"
                                android:textColor="#808080"
                                android:text="Isi ulang bright gas baru 12kg"
                                android:layout_height="wrap_content"
                                android:gravity="start" />
                            <com.travijuu.numberpicker.library.NumberPicker
                                android:layout_marginTop="4dp"
                                android:id="@+id/np_isi_12kg"
                                android:layout_width="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_height="40dp"
                                numberpicker:focusable="false"
                                numberpicker:max="3"
                                numberpicker:min="0"
                                numberpicker:unit="0"
                                numberpicker:value="-5" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>